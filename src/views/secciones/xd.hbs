<div class="modal fade" id="editPregu-modal-{{../this.id_seccion}}-{{this.id_pregunta}}" tabindex="-1" role="dialog"
    aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">
                    Seccion:{{../id_seccion}} Pregunta:
                    {{this.id_pregunta}}
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <label for="nombre">Escriba la Pregunta</label>
                <input class="form-control" type="text" name="nombre_p" placeholder="Pregunta"
                    id="nombrePregunta-{{this.id_pregunta}}" value="{{this.nombre_p}}">
                <label for="nombre">Seleccione el tipo de
                    pregunta</label>

                <select class="form-select" name="tipo" id="select-tipo-{{this.id_pregunta}}"
                    onchange="cambiarTipo({{this.id_pregunta}})">
                    <option value="cerrada">cerrada</option>
                    <option value="multiple">múltiple</option>
                    <option value="abierta">Abierta</option>

                </select>
                <br>
                <div class="row d-flex justify-content-between align-items-center">
                    <div class="col md-4">
                        <input type="text" name="opDeResp" class="form-control input-sm"
                            id="nombreOption-id-{{id_seccion}}" placeholder="Nombre de la opcion">
                    </div>
                    <div class="col md-4 mx-auto">
                        <button type="button" class="btn btn-success" id="addButton-{{id_seccion}}"
                            onclick="addOption({{id_seccion}})">Añadir
                            Respuesta</button>
                    </div>
                </div>
                <br>
                <div id="respuestas-id-{{id_seccion}}" class="col md-4 mx-auto">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" id="btnAddPregunta-{{id_seccion}}"
                    onclick="enviarPregunta({{id_seccion}})">Guardar
                    Pregunta</button>
            </div>
        </div>
    </div>
</div>


<div class="col md-4 mx-auto">
    <label for="text">Tipo de Medida</label>
    <select class="form-select" name="tipoMedida" aria-label="Default select example" id="tipoMedida">
