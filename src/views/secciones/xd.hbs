        <option value="Lejos">Lejos</option>
        <option value="Cerca">Cerca</option>
        <option value="Lejos-Cerca">Lejos - Cerca</option>
    </select>

    <dir id="contenedorTextArea-{{../id_seccion}}-{{this.id_pregunta}}">
        <textarea name="respuestas" class="from-control" id="textArea-{{../id_seccion}}-{{this.id_pregunta}}"></textarea>
    </dir>
